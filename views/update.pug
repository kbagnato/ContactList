extends layout

block content

	.container
		.display-3= title
		
		//- store id from pug into js
		block scripts
			script.
				const id = !{JSON.stringify(id)};
				console.log('id: ' + id)
				const person = !{person};
				console.log('person: ' + person);
				
		form(action = "/update", method = "POST")#contactForm
			.row
				.form-group.col-md-2
					label(for='prefix') Prefix:
					select(name='prefix').form-control#prefix
						option(value='Mr.') Mr.
						option(value='Mrs.') Mrs.
						option(value='Ms.') Ms.
						option(value='Dr.') Dr.
				.form-group.col-md-5
					label(for = 'firstName') First Name:
					input(name = 'firstName' required).form-control#firstName
				.form-group.col-md-5
					label(for = 'lastName') Last Name:
					input(name = 'lastName' required).form-control#lastName
			.row
				.form-group.col-md-8
					label(for = 'street') Street:
					input(name = 'street').form-control#street
				.form-group.col-md-4
					label(for = 'city') City:
					input(name = 'city').form-control#city
			.row
				.form-group.col-md-2
					label(for='state') State:
					select(name='state').form-control#state
						option(value='NJ') NJ
						option(value='NY') NY
						option(value='PA') PA
						option(value='CT') CT
				.form-group.col-md-4
					label(for = 'zip') Zip:
					input(name = 'zip').form-control#zip
				.form-group.col-md-6
					label(for = 'phone') Phone:
					input(name = 'phone').form-control#phone
				.form-group.col-md-8
					label(for = 'email') Email:
					input(name = 'email').form-control#email
			.row
				.form-group
					.form-check.custom-control.custom-checkbox
						input(name='contactMail' type='checkbox')#contactMail.custom-control-input
						label(for='contactMail').custom-control-label Contact by Mail
					.form-check.custom-control.custom-checkbox
						input(name='contactPhone' type='checkbox')#contactPhone.custom-control-input
						label(for='contactPhone').custom-control-label Contact by Phone
					.form-check.custom-control.custom-checkbox
						input(name='contactEmail' type='checkbox')#contactEmail.custom-control-input
						label(for='contactEmail').custom-control-label Contact by Email
			input(type='hidden' name='id')#id
			button(type = "submit").btn.btn-success Update Contact


block scripts
	script(src='/javascripts/update.js')